<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_check_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_check_in_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="15"
            android:typeface="monospace"
            android:textColor="@color/theme_blue"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/tv_check_in_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/check_in_text"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_schedule_words_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/ll_check_in"
        android:layout_toRightOf="@id/ll_check_in"
        android:text="200"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_mastered_words_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_schedule_words_num"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/ll_check_in"
        android:layout_toRightOf="@id/ll_check_in"
        android:text="100"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_schedule_words_num"
        android:layout_marginLeft="4dp"
        android:layout_toEndOf="@+id/tv_schedule_words_num"
        android:layout_toRightOf="@+id/tv_schedule_words_num"
        android:text="/学习计划单词数"
        android:textColor="@color/bottom_text_color_unchecked"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_mastered_words_num"
        android:layout_marginLeft="4dp"
        android:layout_toEndOf="@+id/tv_mastered_words_num"
        android:layout_toRightOf="@+id/tv_mastered_words_num"
        android:text="/累计学习单词数"
        android:textColor="@color/bottom_text_color_unchecked"
        android:textSize="16sp" />


</RelativeLayout>

